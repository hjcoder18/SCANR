<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryDark"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="30dp"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:paddingTop="30dp"
    tools:context="com.example.hunter.scanr.Home">

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@drawable/main_button"
        android:text="Begin Audit"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:id="@+id/button_scan"
        android:onClick="directToScanning"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/search"
        android:text="Search"
        android:textSize="35sp"
        android:textColor="#ffffff"
        android:drawableLeft="@drawable/scanbag"
        android:drawablePadding="-60dp"
        android:paddingLeft="65dp"
        android:background="@drawable/button"
        android:layout_below="@+id/button_scan"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="directToSearchBag" />

</RelativeLayout>